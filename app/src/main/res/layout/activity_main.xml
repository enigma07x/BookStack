<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    android:padding="20dp"
    tools:context="com.example.bookstack.com.gagarinrout.bookstack.MainActivity">

    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Welcome to BookStack"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="LOGIN"
        android:letterSpacing="0.05"
        android:textSize="16sp"
        android:fontFamily="@font/opensans_semibold"
        android:textAllCaps="false"
        android:background="@drawable/shape_button01"
        android:backgroundTint="@color/fair_skin"
        android:textColor="@color/white"
        android:layout_above="@+id/skipBtn"/>

    <Button
        android:id="@+id/skipBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="CONTINUE WITHOUT LOGIN"
        android:letterSpacing="0.05"
        android:textAllCaps="false"
        android:textColor="@color/charcoal"
        android:background="@drawable/shape_button02"/>




</RelativeLayout>